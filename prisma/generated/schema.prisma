generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  email       String    @unique
  password    String
  username    String    @unique
  firstName   String
  lastName    String
  bio         String?
  dateOfBirth DateTime?
  avatar      String?

  isEmailVerified Boolean @default(false)

  tokens               Token[]
  notifications        Notification[]
  notificationSettings NotificationSettings?

  favoriteMusic   Song[]                   @relation(name: "favorite")
  ownMusic        Song[]                   @relation(name: "uploader")
  favoriteArtists Artist[]
  listenings      Listening[]
  recommendations Recommendation[]
  mixes           RecommendationPlaylist[]

  myPlaylists       Playlist[] @relation("creator")
  favoritePlaylists Playlist[] @relation("follower")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id String @id @default(uuid())

  message    String
  isRead     Boolean
  userAvatar String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NotificationSettings {
  id String @id @default(uuid())

  webNotifications Boolean @default(true)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id String @id @default(uuid())

  token     String    @unique
  type      TokenType
  expiresIn DateTime

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Song {
  id String @id @default(uuid())

  title   String
  artists Artist[]

  album   Album?  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId String?

  duration Float
  audioUrl String

  status SongStatus @default(ON_COMPLETED)

  genres String[]

  lyrics Json?

  coverUrl String?

  users User[] @relation(name: "favorite")

  uploader   User?   @relation(name: "uploader", fields: [uploaderId], references: [id], onDelete: Cascade)
  uploaderId String?

  playlists       Playlist[]
  listenings      Listening[]
  recommendations Recommendation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Listening {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  song   Song   @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId String

  timestamp DateTime @default(now())

  @@unique([userId, songId])
}

model Recommendation {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  song   Song   @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId String

  playlists RecommendationPlaylist[]

  score Float

  createdAt DateTime @default(now())

  @@unique([userId, songId])
}

model Artist {
  id String @id @default(uuid())

  name      String
  slug      String  @unique
  avatarUrl String?

  songs  Song[]
  albums Album[]

  followers User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Album {
  id String @id @default(uuid())

  title    String
  coverUrl String?

  songs Song[]

  artist   Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  artistId String

  releaseDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Playlist {
  id String @id @default(uuid())

  title       String
  description String?
  type        PlaylistType @default(PUBLIC)

  coverUrl String?

  songs Song[]

  creator   User   @relation("creator", fields: [creatorId], references: [id])
  creatorId String

  users User[] @relation("follower")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RecommendationPlaylist {
  id String @id @default(uuid())

  title       String
  description String

  recommendations Recommendation[]

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PlaylistType {
  PUBLIC
  PRIVATE
}

enum TokenType {
  EMAIL_VERIFY
  PASSWORD_RESET
  DEACTIVATE_ACCOUNT
}

enum SongStatus {
  IN_COMPLETED
  MODERATION
  ON_COMPLETED
}
